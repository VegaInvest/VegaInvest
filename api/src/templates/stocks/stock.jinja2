{% extends "base.jinja2" %}
{% block content %}
    <div class="mt-3">
        <h1>{{ stock.ticker }} <small class="h4 text-muted">Summary statistics</small></h1>
    </div>
    <hr>
    <div class="container">
    <div class="row">
        <div class="col">
            <!-- TradingView Widget BEGIN -->
<div class="tradingview-widget-container">
  <div id="tradingview_fb2a4"></div>
  <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/NASDAQ-{{ stock.ticker }}/" rel="noopener" target="_blank"><span class="blue-text">{{ stock.ticker }} Chart</span></a> by TradingView</div>
  <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
  <script type="text/javascript">
  new TradingView.widget(
  {
  "width": 980,
  "height": 610,
  "symbol": "NASDAQ:{{ stock.ticker }}",
  "interval": "D",
  "timezone": "Etc/UTC",
  "theme": "dark",
  "style": "1",
  "locale": "en",
  "toolbar_bg": "#f1f3f6",
  "enable_publishing": false,
  "allow_symbol_change": true,
  "container_id": "tradingview_fb2a4"
}
  );
  </script>
</div>
<!-- TradingView Widget END -->
{#            <img src="https://www.google.com/finance/getchart?q={{ stock.ticker }}&p=10Y&i=86400" />#}
        </div>
        <div class="col align-self-center">
            <div class="row">
            <h5>Characteristics</h5>
            </div>
            <div class="row">
                <p>Expected Return: <strong>{{ 100*stock.mu |round(5) }}%</strong></p>
            </div>
            <div class="row">
                <p>Standard Deviation: <strong>{{ 100*stock.std |round(5) }}%</strong></p>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
